{
  "env": {
    "browser": true
  },
  "extends": ["google", "plugin:react-hooks/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "jsdoc", "only-warn"],
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "require-jsdoc": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "new-cap": "off",
    "max-len": ["error", { "code": 120, "ignorePattern": "^import .*" }],
    "no-console": ["error"],
    "spaced-comment": ["error", "always", { "markers": ["/"] }]
  }
}
